<div id="<%= dom_id book %>" style="background-color: #f9f9f 9; border: 2px solid #ccc; padding: 20px; margin-bottom: 20px;">
  <style>
    .book-details h2 {
      color: #333;
      font-size: 24px;
      margin-top: 0;
    }

    .details-section {
      margin-bottom: 10px;
    }

    .details-section strong {
      font-weight: bold;
      margin-right: 5px;
    }
  </style>

  <h2><%= book.title %></h2>
  
  <div class="details-section">
    <strong>Author:</strong> <%= book.author %>
  </div>

  <div class="details-section">
    <strong>Note:</strong> <%= book.note %>
  </div>

  <div>
    <strong>Description:</strong> <%= book.description %>
  </div>
</div>


